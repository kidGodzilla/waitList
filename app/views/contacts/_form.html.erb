
  <h3>Contact Us</h3>
<div >
  <%= simple_form_for :contact, url: contacts_path, method: :post do |f| %>
    <%= f.text_field :name, :required => true, placeholder: "Name" , :size => "35x1"%>
    <%= f.text_field :email, :required => true, placeholder: "Email ID" , :size => "35x1"%><br><br>
    <%= f.text_area :message, :as => :text, :required => true, placeholder: "Content", :size => "70x10" %>

    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>