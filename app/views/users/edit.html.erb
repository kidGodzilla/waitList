<div class="container">
    <div class="row">
<div class="col-sm-6 col-sm-offset-5">
  <h1>Edit Profile</h1>
<%= form_for @user, url: user_path(@user), method: :patch do |f|  %>
  <%= f.label(:firstname, 'Firstname') %><br>
    <%= f.text_field :firstname %><br>
    <%= f.label(:lastname, 'Lastname') %><br>
    <%= f.text_field :lastname %><br>
    <%= f.label(:email, 'Email')  %><br>
    <%= f.text_field :email %><br>

  <%= f.submit %>
<% end %>
<%= link_to 'Delete User', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
</div>
</div>